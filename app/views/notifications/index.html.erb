<div class="container mt-5">
  <h2 class="text-center text-primary mb-4">
    ðŸ”” Notifications
  </h2>

  <% if @notifications.any? %>
    <ul class="list-group shadow-sm">
      <% @notifications.each do |notification| %>
        <li class="list-group-item d-flex justify-content-between align-items-center
                   <%= 'list-group-item-warning fw-semibold' unless notification.read? %>">
          <div>
            <i class="bi <%= notification.read? ? 'bi-envelope-open' : 'bi-envelope-fill text-warning' %> me-2"></i>
            <%= notification.message %>
          </div>

          <% unless notification.read? %>
            <%= button_to "Mark as Read",
                  mark_as_read_notification_path(notification),
                  method: :patch,
                  class: "btn btn-sm btn-outline-success" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-center text-muted mt-4">
      <i class="bi bi-inbox me-2"></i>No notifications at the moment.
    </p>
  <% end %>
</div>
