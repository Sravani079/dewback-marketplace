<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4">ðŸ‘¤ Edit Profile</h2>

          <%= form_with model: @user, url: profile_path, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label fw-semibold" %>
              <%= f.email_field :email, class: "form-control", placeholder: "you@example.com", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :name, class: "form-label fw-semibold" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Full Name", required: true %>
            </div>

            <div class="d-grid">
              <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
