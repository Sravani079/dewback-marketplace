<div class="container mt-5">
  <h1 class="text-center text-primary mb-4">
    <i class="bi bi-pencil-square me-2"></i>Edit Dewback
  </h1>

  <%= form_with model: @dewback, url: admin_dewback_path(@dewback), method: :patch, local: true, html: { multipart: true, class: "card p-4 shadow-lg border-0" } do |f| %>
    
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :title, "Name", class: "form-label fw-semibold" %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter Dewback Name" %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label :color, class: "form-label fw-semibold" %>
        <%= f.text_field :color, class: "form-control", placeholder: "Enter Color" %>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Description", class: "form-label fw-semibold" %>
      <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Enter Dewback Description" %>
    </div>

    <div class="row mb-3">
      <div class="col-md-4">
        <%= f.label :size, class: "form-label fw-semibold" %>
        <%= f.select :size, Dewback::FILTER_OPTIONS[:size], { prompt: "Select Size" }, class: "form-select" %>
      </div>
      <div class="col-md-4">
        <%= f.label :max_speed, "Speed", class: "form-label fw-semibold" %>
        <%= f.select :max_speed, Dewback::FILTER_OPTIONS[:max_speed], { prompt: "Select Speed" }, class: "form-select" %>
      </div>
      <div class="col-md-4">
        <%= f.label :max_load, "Load", class: "form-label fw-semibold" %>
        <%= f.select :max_load, Dewback::FILTER_OPTIONS[:max_load], { prompt: "Select Load" }, class: "form-select" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :price, "Price ($)", class: "form-label fw-semibold" %>
        <%= f.number_field :price, class: "form-control", placeholder: "Enter Price" %>
      </div>
      <div class="col-md-6">
        <%= f.label :quantity, "Stock Quantity", class: "form-label fw-semibold" %>
        <%= f.number_field :quantity, class: "form-control", placeholder: "Enter Quantity" %>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :food_requirements, "Food Requirements", class: "form-label fw-semibold" %>
      <%= f.select :food_requirements, Dewback::FILTER_OPTIONS[:food_requirements], { prompt: "Select Food Requirement" }, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :image_file, "Upload Image", class: "form-label fw-semibold" %>
      <%= f.file_field :image_file, class: "form-control" %>
    </div>

    <div class="form-check form-switch mb-3">
      <%= f.check_box :on_sale, class: "form-check-input", id: "onSaleCheckbox" %>
      <%= f.label :on_sale, "On Sale", class: "form-check-label fw-semibold", for: "onSaleCheckbox" %>
    </div>

    <div class="mb-3">
      <%= f.label :discounted_price, "Discounted Price ($)", class: "form-label fw-semibold" %>
      <%= f.number_field :discounted_price, class: "form-control", placeholder: "Enter Discounted Price" %>
    </div>

    <div class="text-center mt-4">
      <%= f.submit "Update Dewback", class: "btn btn-primary px-5 py-2" %>
    </div>

  <% end %>
</div>
